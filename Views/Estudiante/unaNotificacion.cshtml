@{
    Layout = "EstudiantesLayout";
}
<!DOCTYPE html>
<html lang="en">

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    function img_pathUrl(input){
        $('#img_url')[0].src = (window.URL ? URL : webkitURL).createObjectURL(input.files[0]);
    }
</script>

<head>
	<style>
		input::-webkit-outer-spin-button,
		input::-webkit-inner-spin-button {
			-webkit-appearance: none;
			margin: 0;
		}
		input[type=number] {
			-moz-appearance: textfield;
		}
	</style>

	<title>Login V3</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
	<div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
			<div class="wrap-login100">
                
                <span class="login100-form-logo">
                    <i class="zmdi zmdi-landscape"></i>
                </span>
                <h1 style="color:#004879">Notificación</h1>
                <div class="cont-formulario">
                    <div>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Enviada por: @ViewBag.notificacion.emisor </h3><br>
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">@ViewBag.notificacion.contenido</h3>
                            
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>


                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Recibida: @ViewBag.notificacion.fecha</h3><br>
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br><br><br>

                        <button class="btn-rlz" onclick='window.location = "@Url.Action("marcarNoLeida", "Controlador", new  { idNot = @ViewBag.notificacion.idNotificacion })";'>Marcar como No Leída</button>
                        <button class="btn-accept" style="padding:10px;" onclick='window.location = "@Url.Action("darBajaServicio", "Controlador", new  { idBuzon = @ViewBag.notificacion.idBuzon, idServicio =  @ViewBag.notificacion.emisor})";'>Darme de baja de este servicio</button>
                        <button class="btn-delete" onclick='window.location = "@Url.Action("eliminarNotificacion", "Controlador", new  { idNot = @ViewBag.notificacion.idNotificacion })";'>Eliminar notificacion</button>

                    </div>
                </div>                
			</div>
            
		</div>
    </div>	
</body>

</html>