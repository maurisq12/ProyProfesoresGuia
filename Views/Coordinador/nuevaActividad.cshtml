<!DOCTYPE html>
<html lang="en">

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script>
    function img_pathUrl(input){
        $('#img_url')[0].src = (window.URL ? URL : webkitURL).createObjectURL(input.files[0]);
    };
</script>

<head>
	<style>
		input::-webkit-outer-spin-button,
		input::-webkit-inner-spin-button {
			-webkit-appearance: none;
			margin: 0;
		}
		input[type=number] {
			-moz-appearance: textfield;
		}
	</style>

    <link href="https://assets.website-files.com/5d9634c22ae9dfc2bb59b291/5d976f9728d2062ef47f4ffb_VD%20Favicon.png" rel="shortcut icon" type="image/x-icon"/>
        <link href="https://assets.website-files.com/5d9634c22ae9dfc2bb59b291/5d976f9a6f21d7f891d74966_VD%20Webclip.jpg" rel="apple-touch-icon"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <script>

            var Webflow = Webflow || [];
            Webflow.push(function() {
                document.getElementsByClassName('date').flatpickr({
                    mode: "multiple",
                    dateFormat: "Y-m-d",
                    defaultDate: "2019-10-01"
