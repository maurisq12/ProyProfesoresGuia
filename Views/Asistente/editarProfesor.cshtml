@{
    Layout = "AsistenteLayout";
}
<!DOCTYPE html>
<html lang="en">

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    function img_pathUrl(input){
        $('#img_url')[0].src = (window.URL ? URL : webkitURL).createObjectURL(input.files[0]);
    }
</script>

<head>
	<style>
		input::-webkit-outer-spin-button,
		input::-webkit-inner-spin-button {
			-webkit-appearance: none;
			margin: 0;
		}
		input[type=number] {
			-moz-appearance: textfield;
		}
	</style>

	<title>Login V3</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
	<form method="post" action="@Url.Action("editarProfesorConf", "Controlador")" enctype="multipart/form-data" >
	<div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
			<div class="wrap-login100">
                
                <span class="login100-form-logo">
                    <i class="zmdi zmdi-landscape"></i>
                </span>
                <title>Registro</title>
                <h1 style="color:#004879"> Editar información de profesor </h1>
                <div class="cont-formulario">
                    <div>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Código: @ViewBag.Profesor.codigo</h3>
                            <input type="hidden" id="codigo" name="codigo" value="@ViewBag.Profesor.codigo">
                            <input type="hidden" id="activo" name="activo" value="@ViewBag.Profesor.activo">
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Nombre</h3><br>
                            <h3> <input class = "login-entry" type="text" id="nombre" name="nombre" value="@ViewBag.Profesor.nombreCompleto"><br> </h3>
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Sede</h3><br>
                            <select name="sede" id="sede" class = "login-entry">
                                <option value="CA">Cartago</option>
                                <option value="SJ">San José</option>
                                <option value="LI">Limón</option>
                                <option value="AL">Alajuela</option>
                                <option value="SC">San Carlos</option>
                            </select>
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Correo electrónico</h3><br>
                            <h3> <input class = "login-entry" type="text" id="correo" name="correo" value="@ViewBag.Profesor.correoElectronico"><br> </h3>
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Teléfono oficina</h3><br>
                            <h3> <input class = "login-entry" type="text" id="telefonoOficina" name="telefonoOficina" value="@ViewBag.Profesor.telefonoOficina"><br> </h3>
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Teléfono celular</h3><br>
                            <h3> <input class = "login-entry" type="text" id="telefonoCelular" name="telefonoCelular" value="@ViewBag.Profesor.telefonoCelular"><br> </h3>
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>

                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <h3 style="font-size: 20px;">Fotografía actual:</h3><br>
                            <input type="hidden" id="codigo" name="fotografiaV" value="@ViewBag.Profesor.fotografia">
                            <img style="height: 250px;width: 250px;" src="data:image;base64,@Convert.ToBase64String(@ViewBag.Profesor.fotografia)" /> <br> <br>  
                            <img src="" id="img_url" alt="your image" style="width:250px; height:250px;"><br> <br>    
                            <input type="file" id="fotografia" name="fotografia" accept="image/png, image/gif, image/jpeg" onChange="img_pathUrl(this);">
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div><br>
                    </div>



                    <div>
                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <button style="align-self: center;" class="btn-delete" type="submit">Dar de baja</button><br><br><br>
                        </div><br>
                        <div class="wrap-input100 validate-input " data-validate="Nombre">
                            <button style="align-self: center;" class="btn-not" type="submit">Definir como coordinador</button><br><br><br>
                        </div><br>
                        
                    </div>                    
                </div>                
			</div>
            
		</div>
        <div style="display: flex; justify-content: center; align-items: center;">
            <button style="align-self: center;" class="btn-accept" type="submit">Modificar información</button>
        </div>
    </div>
	</form>
	
</body>

</html>